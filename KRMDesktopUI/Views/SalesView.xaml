<UserControl x:Class="KRMDesktopUI.Views.SalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KRMDesktopUI.Views"
             mc:Ignorable="d" Background="White" FontSize="18"
             d:DesignHeight="600" d:DesignWidth="1000" >

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Sales Transaction" 
                   Grid.ColumnSpan="3" 
                   FontSize="36" 
                   Margin="0 0 0 10"
                   FontWeight="Bold"/>

        <DockPanel Grid.Row="1" Grid.Column="0" LastChildFill="True" Margin="0 0 10 0">
            <TextBlock Text="Search Products:" DockPanel.Dock="Top" FontSize="18"/>
            <TextBox x:Name="ProductSearch" DockPanel.Dock="Top" Margin="0 5 0 5" Padding="5"/>

            <ListBox x:Name="Products" 
                     VerticalAlignment="Stretch" 
                     FontSize="16"
                     Margin="0 10 0 0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ProductName}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>

        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1" Margin="20 0">
            <TextBlock Text="Quantity:" FontSize="18"/>
            <TextBox x:Name="ItemQuantity" 
                     MinWidth="80" 
                     Text="1" 
                     TextAlignment="Center" 
                     Margin="0 5 0 10"/>

            <Button x:Name="AddToCart" 
                    Content="Add To Cart →" 
                    Margin="0 0 0 15" 
                    Padding="10 5" 
                    FontWeight="SemiBold"/>

            <Button x:Name="RemoveFromCart" 
                    Content="← Remove Item" 
                    Padding="10 5"/>
        </StackPanel>

        <Grid Grid.Column="2" Grid.Row="1" Margin="10 0 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Shopping Cart" Grid.Row="0" VerticalAlignment="Top" FontSize="18"/>

            <ListBox x:Name="Cart" 
                     Grid.Row="0" 
                     Margin="0 25 0 10"
                     FontSize="16"/>

            <StackPanel Grid.Row="1" Margin="0 10 0 0">

                <DockPanel Margin="0 5">
                    <TextBlock Text="Subtotal:" FontWeight="SemiBold"/>
                    <TextBlock x:Name="SubTotal" Text="Rs.0.00" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                </DockPanel>

                <DockPanel Margin="0 5">
                    <TextBlock Text="Tax (GST):"/>
                    <TextBlock x:Name="Tax" Text="Rs.0.00" HorizontalAlignment="Right"/>
                </DockPanel>

                <DockPanel Margin="0 5">
                    <TextBlock Text="TOTAL:" FontSize="24" FontWeight="Bold"/>
                    <TextBlock x:Name="Total" Text="Rs.0.00" HorizontalAlignment="Right" FontSize="24" FontWeight="Bold"/>
                </DockPanel>

                <Button x:Name="CheckOut" 
                        Content="PROCESS CHECKOUT" 
                        Margin="0 20 0 0" 
                        Padding="15" 
                        FontSize="20"
                        FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>